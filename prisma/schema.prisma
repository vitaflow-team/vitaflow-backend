generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum ProductType {
  USER
  NUTRITIONIST
  PHYSICAL_EDUCATOR
}

model Users {
  id        String    @id @default(uuid(7))
  name      String
  email     String
  password  String
  avatar    String?
  active    Boolean   @default(false)
  phone     String?
  birthDate DateTime?
  product   Product?  @relation(fields: [productId], references: [id])
  productId String?

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  usersTokens   UsersToken[]
  userAddresses UserAddress?
  clients       Client[]

  @@unique([email])
}

model Client {
  id        String    @id @default(uuid(7))
  name      String
  phone     String
  email     String
  userId    String?   @map("user_id")
  birthDate DateTime?

  professional   Users  @relation(fields: [professionalId], references: [id])
  professionalId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, professionalId])
  @@index([email])
}

model UsersToken {
  id        String   @id @default(uuid(7))
  user      Users    @relation(fields: [userID], references: [id])
  userID    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserAddress {
  id           String  @id @default(uuid(7))
  addressLine1 String?
  addressLine2 String?
  district     String?
  city         String?
  region       String?
  postalCode   String?

  user   Users  @relation(fields: [userId], references: [id])
  userId String @unique
}

model ProductGroup {
  id        String    @id @default(uuid(7))
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model Product {
  id           String        @id @default(uuid(7))
  name         String
  price        Float
  group        ProductGroup  @relation(fields: [groupId], references: [id])
  groupId      String
  type         ProductType   @default(USER)
  stripeId     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  productInfos ProductInfo[]
  users        Users[]
}

model ProductInfo {
  id          String   @id @default(uuid(7))
  description String
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
